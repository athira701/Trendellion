                <script>
                    document.addEventListener("DOMContentLoaded", () => {
                        // Ensure submenu toggling works
                        const submenuItems = document.querySelectorAll(".menu-item.has-submenu > .menu-link");
                        submenuItems.forEach(link => {
                            link.addEventListener("click", (e) => {
                                e.preventDefault();
                                const parent = link.parentElement;
                
                                // Toggle 'active' state for the menu item
                                parent.classList.toggle("active");
                            });
                        });
                
                        // Check for disabled buttons and provide feedback
                        const disabledLinks = document.querySelectorAll("[disabled]");
                        disabledLinks.forEach(link => {
                            link.addEventListener("click", (e) => {
                                e.preventDefault();
                                alert("This feature is currently disabled.");
                            });
                        });
                    });
                </script>
                
