    <script>
        function showLoader() {
            document.getElementById('attiroLoader').style.display = 'flex';
        }

        function hideLoader() {
            document.getElementById('attiroLoader').style.display = 'none';
        }

        // Example usage: Show loader on page load and hide after 3 seconds
        window.onload = function() {
            showLoader();
            setTimeout(hideLoader, 500); // Hide after 3 seconds
        };
    </script>
    
