<%- include('../partials/admin/header1') %>

<section class="content-main">
    <div class="content-header">
        <h2 class="content-title card-title">Order Detail</h2>
        <p>Details for Order ID: <%= orderDetails._id %></p>
    </div>

    <div class="card">
        <header class="card-header d-flex justify-content-between align-items-center">
            <div>
                <span><i class="material-icons md-calendar_today"></i> <b><%= new Date(orderDetails.updatedAt).toLocaleString() %></b></span>
                <br />
                <small class="text-muted">Order ID: <%= orderDetails._id %></small>
            </div>
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#statusChangeModal">
                Change Status
            </button>

            <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        </header>

        <div class="card-body">
            <!-- Customer Info -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <h6>Customer</h6>
                    <p>
                        Name: <%= orderDetails.userId.name %><br />
                        Email: <%= orderDetails.userId.email %><br />
                        Mobile: <%= orderDetails.userId.mobile %>
                    </p>
                </div>
                <div class="col-md-4">
                    <h6>Order Info</h6>
                    <p>
                        Payment Method: <%= orderDetails.paymentMethod %><br />
                        Status: <%= orderDetails.orderStatus %><br />
                        Total Amount: ₹<%= orderDetails.totalAmount %>
                    </p>
                </div>
                <div class="col-md-4">
                    <h6>Delivery Address</h6>
                    <p>
                        <% if (orderDetails.address) { %>
                            <%= orderDetails.address.name %><br />
                            <%= orderDetails.address.landMark %>, 
                            <%= orderDetails.address.city %>, 
                            <%= orderDetails.address.state %>, 
                            PIN: <%= orderDetails.address.pincode %>
                        <% } else { %>
                            No delivery address available
                        <% } %>
                    </p>
                </div>
            </div>

            <!-- Order Details Table -->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orderDetails.orderedItems.length > 0) { %>
                            <% orderDetails.orderedItems.forEach(item => { %>
                                <tr>
                                    <td>
                                        <img src="/uploads/<%= item.product.productImage[0] %>" alt="Product Image" width="50" class="rounded me-2" />
                                        <%= item.product.productName %>
                                    </td>
                                    <td><%= item.size %></td>
                                    <td>₹<%= item.price %></td>
                                    <td><%= item.quantity %></td>
                                    <td class="text-end">₹<%= item.price * item.quantity %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    No items found for this order.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!-- Status Change Modal -->
    <div class="modal fade" id="statusChangeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Change Order Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <select id="orderStatus" class="form-select">
                        <option value="Ordered">Ordered</option>
                        <option value="Shipped">Shipped</option>
                        <option value="Out For Delivery">Out For Delivery</option>
                        <option value="Delivered">Delivered</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveStatusBtn">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
       document.getElementById('saveStatusBtn').addEventListener('click', function () {
        const orderId = '<%= orderDetails._id %>';
        const status = document.getElementById('orderStatus').value;

        // Show a confirmation dialog before making the API call
        Swal.fire({
            title: 'Are you sure?',
            text: `You are about to change the order status to "${status}".` ,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, change it!',
        }).then((result) => {
            if (result.isConfirmed) {
                // Make the API call if confirmed
                axios.post('/admin/changeStatus', { orderId, status })
                    .then(response => {
                        Swal.fire(
                            'Success!',
                            'Order status updated successfully.',
                            'success'
                        ).then(() => {
                            location.reload(); // Reload the page after success
                        });
                    })
                    .catch(error => {
                        Swal.fire(
                            'Error!',
                            'There was an error updating the order status. Please try again.',
                            'error'
                        );
                        console.error(error);
                    });
            }
        });
    });
</script>

<%- include('../partials/admin/footer') %>  